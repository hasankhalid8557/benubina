generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model blogs {
  id         String   @id @default(uuid())
  title      String
  slug       String   @unique
  content    String
  excerpt    String?
  category   String
  keywords   String[]
  coverImage String?
  published  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  authorId   String
  author     users    @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model users {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  blogs     blogs[]
}
